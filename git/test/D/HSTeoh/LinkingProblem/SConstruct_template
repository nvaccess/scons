# -*- mode:python; coding=utf-8; -*-

import os

environment = Environment(
    ENV=os.environ,
    tools = ['cc', 'link' , '{}'],
    LIBS = ['ncurses'])

environment.Object('ncurs_impl.o', 'ncurs_impl.c')

environment.Program('prog', Split("""
	prog.d
	ncurs_impl.o
"""))

environment.Program('cprog', Split("""
	cprog.c
	ncurs_impl.o
"""))
